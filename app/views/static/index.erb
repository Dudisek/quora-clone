		<div class="page-header">
		  <h1>Top stories for you</h1> 
		</div>	


			<div class="media">
			<div class="media-body">
			
				<%@top_stories.each do |a|%>
					<h4 class="media-heading">
						<%by = User.find(a.user_id)%>
						<%= a.title %>
						<small> by <a href="users/<%=by.id%>"><%=by.name%></a> 
						<%= (a.created_at).ago_in_words%> </small>

					</h4>	
						<%= a.body %><br /><br />
				<%end%>	
			</div>				

		</div> <!-- page header -->
</div> <!-- col-md-8 -->




