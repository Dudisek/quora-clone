<h1>Profile</h1>

Name: <%= @user.name %> <br />
Email: <%= @user.email %> <br />
Description: <%= @user.description %> <br />

<!-- BUTTONS LOGOUT, DELETE, EDIT -->
<!-- visible just if logged -->

<% if authorization? (@user.id)%>

		<a href="/users/<%=@user.id%>/edit"><button>Edit profile</button></a>

<%end%>


<!-- QUESTIONS -->

<h2>Questions</h2>
<% @user.questions.each do |q| %>	
<ul>
<li>Question: <%= q.title %></li>
<li>Description: <%= q.body %></li>
<% if authorization? (@user.id)%>

	<div class="dropdown">
	  <button class="btn btn-default dropdown-toggle glyphicon glyphicon-cog" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
	    <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
	    <li><a href="/questions/<%=q.id%>/edit"><button>Edit Question</button></a></li>
	    <li><form action="/questions/<%=q.id%>" method="post">
			<input type="hidden" name="_method" value="delete">
			<input type="submit" value="Delete Profile">
		</form></li>

		

	  </ul>
	</div>

<a href="/questions/create"><button>Create Question</button></a>

		

<% end %>		
</ul>
<% end %>




